
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}

.tab-bar .tab-bar-wrap {
  display: flex;
  height: 100rpx;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .special-image {
  width: 90rpx;
  height: 90rpx;
}

.tab-bar-item .tab-bar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.tab-bar-item .tab-text {
  font-size: 20rpx;
  color: #666;
}
